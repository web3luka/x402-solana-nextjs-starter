# Network Configuration
NODE_ENV=development
NEXT_PUBLIC_NETWORK=solana-devnet

# Privy Configuration
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id-here

# Treasury wallet address (where payments are sent)
TREASURY_WALLET_ADDRESS=your_treasury_wallet_address_here

# Optional: Custom RPC URLs
NEXT_PUBLIC_SOLANA_RPC_DEVNET=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_RPC_MAINNET=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY
# Alternative RPCs (automatically tried as fallback):
# https://rpc.ankr.com/solana
# https://solana-mainnet.rpc.extrnode.com
# https://api.mainnet-beta.solana.com

# Base URL for resource field
NEXT_PUBLIC_BASE_URL=http://localhost:3000